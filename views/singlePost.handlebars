<section class="card">
    <header>
        <h4>{{post.title}}</h4>
        <h6>Posted by {{user.name}} at {{format_date post.created_at}}</h6>
    </header>
    <p>{{post.text}}</p>
    <br>
    {{> comment}}
    {{#if logged_in}}
    <br>
    <form class="comment-form">
        <div>
            <textarea class="form-input" name="comment-text" id="comment-text" type="text"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Add Comment</button>
        </div>
        <div class="form-group">
            <button class="btn delete-comment btn-primary" type="button">Delete Comment</button>
        </div>
    </form>
    {{/if}}

</section>

<script src="/js/comment.js"></script>